<h1>New Book</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <%= f.label "Title: " %>
  <%= f.text_field :title %>

  <%= f.submit "Create Book" %>
<% end %>

<%= link_to "Back to Books", books_path %>
